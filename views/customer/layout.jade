extends ../layout
block content
    body
        nav.navbar.navbar-default.navbar-fixed-top
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#") YourBabySitter
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href="/customers/new")
                                | Add
                                span.sr-only (current)
                    form.navbar-form.navbar-left(role="search")
                        .form-group
                            input.form-control.btn-space(type="text", placeholder="Search")
                        button.btn.btn-default.btn-space(type="submit") Search
                    ul.nav.navbar-nav.navbar-right
                        li.dropdown
                            a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false")
                                | Navigation
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href="/babysitters") Baby Sitters
                                li
                                    a(href="/customers") Customers
                                li
                                    a(href="/sittings") Sittings
                                li
                                    a(href="/reviews") Reviews
                                li.divider(role="separator")
                                li
                                    a(href="#") My Account
                // /.navbar-collapse
            // /.container-fluid
        block customers
